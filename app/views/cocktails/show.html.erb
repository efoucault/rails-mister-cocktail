<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= @cocktail.photo %>');")">
    <%= link_to "Edit cocktail", edit_cocktail_path(@cocktail), class: "btn btn-success btn-custo" %>
    <h1>Cocktail: <%= @cocktail.name %></h1></br>
</div>
<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <h2>Doses</h2>
        <ul>
         <% @cocktail.doses.each do |dose| %>
          <li><%= "#{dose.ingredient.name.upcase}: #{dose.description} " %> <%= link_to dose_path(dose), method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %></li>
         <% end %>
        </ul>
      </div>
      <div class="col-xs-12 col-md-6">
        <%= render "doses/form" %>
      </div>
    </div>
    <div class="review">
      <%= render "reviews/form" %>
      <h2>Reviews:</h2>
      <ul>
       <% @cocktail.reviews.each do |review| %>
        <li><strong><%= "#{review.created_at.strftime("%F %T")}" %></strong> <%= "- #{review.content}" %></li>
       <% end %>
      </ul>
    </div>
  </div>
</div>
