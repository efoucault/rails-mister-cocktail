<div class="wrapper wrapper-index" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1523872187875-ba17c5140d20?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=f09f6a60c64a2640d07b75d90e5b9ff7&auto=format&fit=crop&w=1219&q=80')">
  <div class="container">
  <h1 id="banner-typed-text"></h1>
    <div class="row">
      <div class="col-xs-12">
          <% @cocktails.each do |cocktail| %>
            <div class="col-xs-4">
              <div class="card">
                  <div class="flat-card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cocktail.photo %>')">
                    <div class="text"><%= link_to "#{cocktail.name}", cocktail_path(cocktail) %></div>
                  </div>
                <div class="tags">
                    <%= link_to new_cocktail_cocktail_tag_path(cocktail) do %>
                      <i class="fa fa-plus"></i>
                    <% end %>
                  <ul class="list-inline">
                    <% cocktail.tags.each do |tag| %>
                      <li class="list-inline-item" ><%= tag.name %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>

